{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "npx jest --runInBand --detectOpenHandles --colors --verbose --reporters=default",
    "test:ci": "npx jest --ci --runInBand --silent --colors --coverage",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "in-file-jest-tests",
  "author": "bowd",
  "module": "dist/in-file-jest-tests.esm.js",
  "size-limit": [
    {
      "path": "dist/in-file-jest-tests.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/in-file-jest-tests.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.2",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "size-limit": "^4.10.2",
    "ts-jest": "^26.5.4",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "stack-trace": "^0.0.10"
  }
}
